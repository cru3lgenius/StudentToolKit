<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#410093"
    android:id="@+id/fragment_profile">



    <Button
        android:background="@drawable/button_with_border_2"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivBackgroundProfile"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="120dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#1abc9c"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/etProfileName1"
        android:layout_alignBottom="@+id/etProfileName1"
        android:layout_toStartOf="@+id/ivProfilePicture" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textColor="#1abc9c"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/etAge1"
        android:layout_alignBottom="@+id/etAge1"
        android:layout_alignStart="@+id/tvProfileName" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#1abc9c"
        android:text="Gender:"
        android:layout_alignBaseline="@+id/etGender1"
        android:layout_alignBottom="@+id/etGender1"
        android:layout_alignStart="@+id/tvAge" />

    <EditText
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:id="@+id/etProfileName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_toEndOf="@+id/tvGender"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/etAge1"
        android:textSize="15dp"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etProfileName1"
        android:layout_alignStart="@+id/etProfileName1" />

    <EditText
        android:id="@+id/etGender1"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAge1"
        android:layout_alignStart="@+id/etAge1" />

    <Button
        android:id="@+id/btnEditProfile"
        android:background="@drawable/button_with_border_2"
        android:textColor="#FFFFFF"
        android:text="Edit Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp" />



</RelativeLayout>