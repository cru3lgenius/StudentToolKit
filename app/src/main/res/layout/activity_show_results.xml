<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1abc9c"
    tools:context="com.example.cru3lgenius.studenttoolkit.Activities.Flashcard_Activities.ShowResults">


    <TextView
        android:text="Your results:"

        android:textStyle="bold"
        android:textColor="#bd081c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/tvYourResults" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvYourResults"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="40dp"
        android:layout_alignLeft="@+id/tvYourResults"
        android:id="@+id/lvResults"/>

    <Button
        android:text="Go Back To Menu"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_with_border_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoBackToMenu"
        android:layout_alignTop="@+id/lvResults"
        android:layout_marginTop="502dp"
        android:layout_alignStart="@+id/lvResults" />

</RelativeLayout>
