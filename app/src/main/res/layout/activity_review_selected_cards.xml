<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review_selected_cards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f1c40f"

    tools:context="com.example.cru3lgenius.studenttoolkit.Activities.Flashcard_Activities.ReviewSelectedCards">

    <TextView
        android:text="Question:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="26dp"
        android:id="@+id/tvQuestionLabel"
        android:textSize="15dp"
        android:textColor="#c0392b"/>

    <TextView
        android:text="Write your answer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQuestionField"
        android:layout_alignLeft="@+id/tvQuestionField"
        android:layout_alignStart="@+id/tvQuestionField"
        android:layout_marginTop="16dp"
        android:textColor="#c0392b"
        android:id="@+id/tvAnswerLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@drawable/custom_border_background"
        android:lines="6"
        android:maxLines="6"
        android:textColor="#8e44ad"
        android:layout_marginRight="35dp"
        android:layout_marginTop="14dp"
        android:id="@+id/etAnswerGuess"
        android:layout_below="@+id/tvAnswerLabel"
        android:layout_alignLeft="@+id/tvAnswerLabel"
        android:layout_alignStart="@+id/tvAnswerLabel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8e44ad"
        android:lines="7"
        android:background="@drawable/custom_border_background"
        android:maxLines="7"
        android:layout_marginTop="14dp"
        android:layout_marginRight="35dp"
        android:id="@+id/tvQuestionField"
        android:layout_below="@+id/tvQuestionLabel"
        android:layout_alignLeft="@+id/tvQuestionLabel"
        android:layout_alignStart="@+id/tvQuestionLabel" />

    <Button
        android:text="Next Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNextCard"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etAnswerGuess"
        android:layout_alignRight="@+id/etAnswerGuess"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="#000000"/>

</RelativeLayout>
